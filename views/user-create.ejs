<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Create User Account</title>
  <link rel="stylesheet" href="/auth-assets/styles.css" />
</head>
<body>
  <main class="container auth-shell">
    <a class="auth-back" href="/products">&larr; Back to Website</a>
    <div class="card auth-card">
      <div class="auth-mark">FNN ART USER</div>
      <h1>Create User</h1>
      <p class="muted">Create your user account to like artworks, comment, and use cart.</p>

      <form id="userCreateForm">
        <div class="field-row">
          <label for="name">Name</label>
          <input id="name" name="name" maxlength="120" required />
        </div>
        <div class="field-row">
          <label for="email">Email</label>
          <input id="email" name="email" type="email" required />
        </div>
        <div class="field-row">
          <label for="password">Password</label>
          <input id="password" name="password" type="password" minlength="8" required />
        </div>
        <div class="actions">
          <button class="primary" type="submit" id="userCreateBtn">Create Account</button>
          <a class="btn-link" href="/user/log">Back to login</a>
        </div>
        <div id="userCreateMsg" class="error" role="alert"></div>
      </form>
    </div>
  </main>

  <script src="/auth-assets/app.js"></script>
  <script>
    const sendApiRequest = (window.APP && typeof APP.apiRequest === "function")
      ? APP.apiRequest
      : async () => { throw new Error("Client assets failed to load. Please refresh and try again."); };
    const form = document.getElementById("userCreateForm");
    const btn = document.getElementById("userCreateBtn");
    const msg = document.getElementById("userCreateMsg");

    form.addEventListener("submit", async (event) => {
      event.preventDefault();
      msg.textContent = "";
      btn.disabled = true;
      const data = new FormData(form);
      const payload = {
        name: data.get("name"),
        email: data.get("email"),
        password: data.get("password"),
      };
      try {
        const result = await sendApiRequest("/api/auth/user/signup", {
          method: "POST",
          body: JSON.stringify(payload),
        });
        window.location.href = result.redirect || "/user/panel";
      } catch (error) {
        msg.textContent = error.message || "Could not create account.";
      } finally {
        btn.disabled = false;
      }
    });
  </script>
</body>
</html>
