<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Reset Password</title>
  <link rel="stylesheet" href="/auth-assets/styles.css" />
</head>
<body>
  <main class="container auth-shell">
    <a class="auth-back" href="/log">&larr; Back to Login</a>
    <div class="card auth-card">
      <div class="auth-mark">FNN ART</div>
      <h1>Reset Password</h1>
      <p class="muted">Enter a new password for your account.</p>

      <form id="resetForm">
        <input id="token" name="token" type="hidden" value="<%= token || '' %>" />
        <div class="field-row">
          <label for="password">New Password</label>
          <input id="password" name="password" type="password" minlength="8" required />
        </div>
        <div class="actions">
          <button class="primary" type="submit" id="resetBtn">Reset Password</button>
          <a class="btn-link" href="/log">Back to login</a>
        </div>
        <div id="resetMsg" class="error" role="alert"></div>
      </form>
    </div>
  </main>

  <script src="/auth-assets/app.js"></script>
  <script>
    const sendApiRequest = (window.APP && typeof APP.apiRequest === "function")
      ? APP.apiRequest
      : async () => { throw new Error("Client assets failed to load. Please refresh and try again."); };

    const form = document.getElementById("resetForm");
    const tokenInput = document.getElementById("token");
    const passwordInput = document.getElementById("password");
    const button = document.getElementById("resetBtn");
    const message = document.getElementById("resetMsg");

    form.addEventListener("submit", async (event) => {
      event.preventDefault();
      message.className = "error";
      message.textContent = "";
      button.disabled = true;
      try {
        const token = String(tokenInput.value || "").trim();
        const password = String(passwordInput.value || "");
        if (!token) {
          throw new Error("Reset token is missing.");
        }
        const result = await sendApiRequest("/api/auth/reset-password", {
          method: "POST",
          body: JSON.stringify({ token, password }),
        });
        message.className = "success";
        message.textContent = result.message || "Password reset successfully.";
        setTimeout(() => {
          window.location.href = "/log";
        }, 900);
      } catch (error) {
        message.className = "error";
        message.textContent = error.message || "Could not reset password.";
      } finally {
        button.disabled = false;
      }
    });
  </script>
</body>
</html>
