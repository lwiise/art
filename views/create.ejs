<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Create User</title>
  <link rel="stylesheet" href="/auth-assets/styles.css" />
</head>
<body>
  <main class="container auth-shell">
    <a class="auth-back" href="/">‚Üê Back to Website</a>
    <div class="card auth-card">
      <div class="auth-mark">FNN ART</div>
      <h1>Create User</h1>
      <p class="muted">Create your account, then you will be redirected to your personal panel page.</p>

      <form id="createForm">
        <div class="field-row">
          <label for="name">Name</label>
          <input id="name" name="name" required maxlength="120" />
        </div>
        <div class="field-row">
          <label for="email">Email</label>
          <input id="email" name="email" type="email" required />
        </div>
        <div class="field-row">
          <label for="password">Password</label>
          <input id="password" name="password" type="password" required minlength="8" />
        </div>
        <div class="actions">
          <button class="primary" type="submit" id="createBtn">Create account</button>
          <a href="/log" class="btn-link">Back to login</a>
        </div>
        <div id="createMsg" class="error" role="alert"></div>
      </form>
    </div>
  </main>

  <script src="/auth-assets/app.js"></script>
  <script>
    const apiRequest = (window.APP && typeof APP.apiRequest === "function")
      ? APP.apiRequest
      : async () => { throw new Error("Client assets failed to load. Please refresh and try again."); };
    const form = document.getElementById("createForm");
    const btn = document.getElementById("createBtn");
    const msg = document.getElementById("createMsg");

    form.addEventListener("submit", async (event) => {
      event.preventDefault();
      msg.className = "error";
      msg.textContent = "";
      btn.disabled = true;

      const data = new FormData(form);
      const payload = {
        name: data.get("name"),
        email: data.get("email"),
        password: data.get("password"),
      };

      try {
        const result = await apiRequest("/api/auth/signup", {
          method: "POST",
          body: JSON.stringify(payload),
        });
        msg.className = "success";
        msg.textContent = result.message || "Account created.";
        window.location.href = result.redirect || "/log";
      } catch (error) {
        msg.className = "error";
        msg.textContent = error.message || "Could not create account.";
      } finally {
        btn.disabled = false;
      }
    });
  </script>
</body>
</html>
