<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Sign In</title>
  <link rel="stylesheet" href="/auth-assets/styles.css" />
</head>
<body>
  <main class="container auth-shell">
    <a class="auth-back" href="/">‚Üê Back to Website</a>
    <div class="card auth-card">
      <div class="auth-mark">FNN ART</div>
      <h1>Sign In</h1>
      <p class="muted">Login to access your panel.</p>

      <form id="signinForm">
        <div class="field-row">
          <label for="email">Email</label>
          <input id="email" name="email" type="email" autocomplete="email" required />
        </div>
        <div class="field-row">
          <label for="password">Password</label>
          <input id="password" name="password" type="password" autocomplete="current-password" required />
        </div>
        <div class="actions">
          <button class="primary" type="submit" id="signinBtn">Sign In</button>
        </div>
        <div id="signinMsg" class="error" role="alert"></div>
      </form>

      <hr class="auth-divider">
      <p class="small auth-line">
        New here? <a href="/create">Create a user account</a>
      </p>
      <p class="small muted auth-line">
        Default local users:
        <span class="mono">admin@example.com / Admin123!</span>,
        <span class="mono">user@example.com / User123!</span>
      </p>
    </div>
  </main>

  <script src="/auth-assets/app.js"></script>
  <script>
    const form = document.getElementById("signinForm");
    const btn = document.getElementById("signinBtn");
    const msg = document.getElementById("signinMsg");

    form.addEventListener("submit", async (event) => {
      event.preventDefault();
      if (!window.APP || typeof APP.apiRequest !== "function") {
        msg.textContent = "Client assets failed to load. Please refresh and try again.";
        return;
      }
      msg.textContent = "";
      btn.disabled = true;

      const formData = new FormData(form);
      const payload = {
        email: formData.get("email"),
        password: formData.get("password"),
      };

      try {
        const result = await APP.apiRequest("/api/auth/signin", {
          method: "POST",
          body: JSON.stringify(payload),
        });
        window.location.href = result.redirect || "/";
      } catch (error) {
        msg.textContent = error.message || "Sign in failed.";
      } finally {
        btn.disabled = false;
      }
    });
  </script>
</body>
</html>
