<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>User Login</title>
  <link rel="stylesheet" href="/auth-assets/styles.css" />
</head>
<body>
  <main class="container auth-shell">
    <a class="auth-back" href="/products">&larr; Back to Website</a>
    <div class="card auth-card">
      <div class="auth-mark">FNN ART USER</div>
      <h1>User Sign In</h1>
      <p class="muted">Login to like products, post comments, and manage your cart.</p>

      <form id="userSigninForm">
        <div class="field-row">
          <label for="email">Email</label>
          <input id="email" name="email" type="email" autocomplete="email" required />
        </div>
        <div class="field-row">
          <label for="password">Password</label>
          <input id="password" name="password" type="password" autocomplete="current-password" required />
        </div>
        <div class="actions">
          <button class="primary" type="submit" id="userSigninBtn">Sign In</button>
          <a class="btn-link" href="/log">Vendor/Admin login</a>
        </div>
        <div id="userSigninMsg" class="error" role="alert"></div>
      </form>

      <hr class="auth-divider">
      <p class="small auth-line">
        New user? <a href="/user/create">Create user account</a>
      </p>
    </div>
  </main>

  <script src="/auth-assets/app.js"></script>
  <script>
    const sendApiRequest = (window.APP && typeof APP.apiRequest === "function")
      ? APP.apiRequest
      : async () => { throw new Error("Client assets failed to load. Please refresh and try again."); };
    const form = document.getElementById("userSigninForm");
    const btn = document.getElementById("userSigninBtn");
    const msg = document.getElementById("userSigninMsg");

    form.addEventListener("submit", async (event) => {
      event.preventDefault();
      msg.textContent = "";
      btn.disabled = true;
      const data = new FormData(form);
      const payload = {
        email: data.get("email"),
        password: data.get("password"),
      };
      try {
        const result = await sendApiRequest("/api/auth/user/signin", {
          method: "POST",
          body: JSON.stringify(payload),
        });
        window.location.href = result.redirect || "/user/panel";
      } catch (error) {
        msg.textContent = error.message || "Login failed.";
      } finally {
        btn.disabled = false;
      }
    });
  </script>
</body>
</html>
