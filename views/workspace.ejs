<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= isAdmin ? "Admin Panel" : "Vendors Panel" %> - <%= panelUser.name %></title>
  <link rel="stylesheet" href="/auth-assets/styles.css" />
</head>
<body>
  <main class="container workspace-container">
    <div>
      <h1 style="margin:0;"><%= isAdmin ? "Admin Panel" : "Vendors Panel" %></h1>
      <p class="muted" style="margin:8px 0 20px;">
        <%= isAdmin
          ? "Manage all website content and products."
          : "Manage your products only. You can add new products and edit products you created." %>
        <% if (!isAdmin) { %>
          Your changes are submitted as pending edits for admin approval.
        <% } %>
      </p>
    </div>

    <section class="card workspace-card">
      <div class="workspace-toolbar">
        <div class="workspace-toolbar-left">
          <button type="button" id="refreshContentBtn">Refresh</button>
          <% if (isAdmin) { %>
            <button type="button" id="seedContentBtn">Seed Current Products</button>
          <% } %>
        </div>
        <div class="workspace-toolbar-right">
          <span class="workspace-user"><%= (currentUser && currentUser.email) || panelUser.email %></span>
          <button type="button" id="signoutBtn">Logout</button>
        </div>
      </div>

      <div class="workspace-card-title"><%= isAdmin ? "Admin Sections" : "Vendor Products" %></div>
      <p class="workspace-card-sub">
        <%= isAdmin
          ? "Use the side menu to switch between Products and website blocks."
          : "Use this page to add new products and edit only your own products." %>
      </p>

      <div class="workspace-grid">
        <aside class="workspace-nav" id="workspaceNav"></aside>

        <section class="workspace-list-wrap">
          <div class="workspace-col-head">
            <h3 id="workspaceListTitle">Products</h3>
            <button type="button" id="addProductBtn">New Product</button>
          </div>
          <div class="field-row" id="productFilterRow">
            <div class="workspace-form-grid two">
              <input id="productSearchInput" placeholder="Search products..." />
              <select id="productTypeFilter">
                <option value="all">All Categories</option>
                <option value="art">Art</option>
                <option value="designs">Designs</option>
                <option value="books">Books</option>
                <option value="photography">Photography</option>
                <option value="sculpture">Sculpture</option>
              </select>
            </div>
            <div class="workspace-form-grid two">
              <select id="productSortSelect">
                <option value="sort_order:asc">Sort: Order (Asc)</option>
                <option value="sort_order:desc">Sort: Order (Desc)</option>
                <option value="name:asc">Sort: Name (A-Z)</option>
                <option value="name:desc">Sort: Name (Z-A)</option>
                <option value="gallery_type:asc">Sort: Category (A-Z)</option>
                <option value="gallery_type:desc">Sort: Category (Z-A)</option>
                <option value="status:asc">Sort: Status (A-Z)</option>
                <option value="status:desc">Sort: Status (Z-A)</option>
              </select>
              <select id="productPageSize">
                <option value="10">10 per page</option>
                <option value="20" selected>20 per page</option>
                <option value="50">50 per page</option>
                <option value="100">100 per page</option>
              </select>
            </div>
            <div class="workspace-page-meta" id="productPageMeta"></div>
            <div class="actions" id="productPagerRow">
              <button type="button" id="productPrevPage">Prev</button>
              <button type="button" id="productNextPage">Next</button>
            </div>
          </div>
          <div class="workspace-list" id="workspaceList"></div>
        </section>

        <section class="workspace-editor-wrap">
          <div class="workspace-col-head">
            <h3 id="workspaceEditorTitle">Editor</h3>
          </div>
          <div id="workspaceEditor"></div>
          <div class="workspace-status" id="workspaceStatus">Ready.</div>
          <div class="actions workspace-actions" id="workspaceActionRow"></div>
        </section>
      </div>
    </section>

    <section class="card workspace-requests">
      <div class="topbar" style="margin-bottom:8px;">
        <h2 style="margin:0;">Edit Requests</h2>
        <button type="button" id="refreshEditsBtn">Refresh</button>
      </div>
      <div class="small muted" id="editsStatus">Loading...</div>
      <div style="overflow:auto;">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>User</th>
              <th>Title</th>
              <th>Status</th>
              <th>Created</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="editsTableBody"></tbody>
        </table>
      </div>
    </section>
  </main>

  <script src="/auth-assets/app.js"></script>
  <script>
    const isAdmin = <%= isAdmin ? "true" : "false" %>;
    const isVendor = !isAdmin;
    const panelUserId = <%= Number(panelUser.id) %>;
    const TAB_ORDER = ["products", "home", "about", "services", "process", "gallery", "contact", "footer"];
    const TAB_LABEL = {
      products: "Products",
      home: "Home",
      about: "About",
      services: "Services",
      process: "Process",
      gallery: "Gallery",
      contact: "Contact",
      footer: "Footer",
    };
    const GALLERY_TYPE_LABELS = {
      art: "Art",
      designs: "Designs",
      furniture: "Designs",
      books: "Books",
      photography: "Photography",
      sculpture: "Sculpture",
    };
    const CATEGORY_OPTIONS = {
      art: ["Artwork", "Sculpture"],
      sculpture: ["Sculpture", "Artwork"],
      designs: ["All", "Cabinets", "Sideboards", "Decor"],
      furniture: ["All", "Cabinets", "Sideboards", "Decor"],
      books: ["All"],
      photography: ["All"],
    };
    const SECTION_COLLECTIONS = {
      home: [
        { path: ["slides"], label: "Slides", template: { image_url: "" } },
      ],
      about: [
        { path: ["cards"], label: "About Cards", template: { meta: "", title: "", description: "", image_url: "" } },
      ],
      services: [
        { path: ["items"], label: "Service Items", template: { icon: "", title: "", description: "" } },
      ],
      process: [
        { path: ["steps"], label: "Process Steps", template: { kicker: "", title: "", description: "", illustration: "" } },
      ],
      gallery: [
        { path: ["art_types"], label: "Art Types", template: "Artwork" },
        { path: ["design_filters"], label: "Design Filters", template: "All" },
        { path: ["book_filters", "themes"], label: "Book Themes", template: "Theme" },
        { path: ["book_filters", "colors"], label: "Book Colors", template: "Color" },
        { path: ["book_filters", "sizes"], label: "Book Sizes", template: "Size" },
      ],
      footer: [
        { path: ["social"], label: "Social Handles", template: "@handle" },
      ],
    };
    const VISIBLE_TABS = isAdmin ? TAB_ORDER : ["products"];

    if (window.APP && typeof APP.attachSignOutHandler === "function") {
      APP.attachSignOutHandler("signoutBtn");
    }

    const sendApiRequest = (window.APP && typeof APP.apiRequest === "function")
      ? APP.apiRequest
      : async () => { throw new Error("Client assets failed to load. Please refresh and try again."); };

    const navEl = document.getElementById("workspaceNav");
    const listEl = document.getElementById("workspaceList");
    const editorEl = document.getElementById("workspaceEditor");
    const listTitleEl = document.getElementById("workspaceListTitle");
    const editorTitleEl = document.getElementById("workspaceEditorTitle");
    const statusEl = document.getElementById("workspaceStatus");
    const actionRowEl = document.getElementById("workspaceActionRow");
    const editsStatusEl = document.getElementById("editsStatus");
    const editsBodyEl = document.getElementById("editsTableBody");

    const refreshContentBtn = document.getElementById("refreshContentBtn");
    const seedContentBtn = document.getElementById("seedContentBtn");
    const addProductBtn = document.getElementById("addProductBtn");
    const productTypeFilter = document.getElementById("productTypeFilter");
    const productSearchInput = document.getElementById("productSearchInput");
    const productSortSelect = document.getElementById("productSortSelect");
    const productPageSize = document.getElementById("productPageSize");
    const productPageMeta = document.getElementById("productPageMeta");
    const productPrevPage = document.getElementById("productPrevPage");
    const productNextPage = document.getElementById("productNextPage");
    const productFilterRow = document.getElementById("productFilterRow");
    const refreshEditsBtn = document.getElementById("refreshEditsBtn");

    let currentState = { sections: {}, products: [] };
    let activeTab = "products";
    let selectedProductId = null;
    let productPage = 1;
    let serverProductIds = new Set();

    function escapeHtml(value) {
      return String(value || "")
        .replace(/&/g, "&amp;")
        .replace(/</g, "&lt;")
        .replace(/>/g, "&gt;");
    }

    function setStatus(text, type = "muted") {
      statusEl.textContent = text;
      statusEl.className = `workspace-status ${type}`;
    }

    function toNumberOrNull(value) {
      if (value === null || value === undefined || value === "") return null;
      const number = Number(value);
      return Number.isFinite(number) ? number : null;
    }

    function toGalleryType(rawType) {
      const value = String(rawType || "").trim().toLowerCase();
      if (value === "furniture") return "designs";
      if (value === "sculpture") return "sculpture";
      if (value === "books") return "books";
      if (value === "designs") return "designs";
      if (value === "photography") return "photography";
      return "art";
    }

    function defaultCategory(type) {
      const options = CATEGORY_OPTIONS[type] || ["All"];
      return options[0];
    }

    function parseMediaImages(value) {
      if (Array.isArray(value)) {
        return value.map((item) => String(item || "").trim()).filter(Boolean);
      }
      return String(value || "")
        .split(/\r?\n/g)
        .map((item) => item.trim())
        .filter(Boolean);
    }

    function normalizeProduct(product, index = 0) {
      const source = (product && typeof product === "object") ? product : {};
      const type = toGalleryType(source.gallery_type);
      return {
        id: String(source.id || `prod-${Date.now()}-${index}`),
        name: String(source.name || "Untitled Product"),
        gallery_type: type,
        category: String(source.category || defaultCategory(type)),
        status: String(source.status || "active"),
        sort_order: Number.isFinite(Number(source.sort_order)) ? Number(source.sort_order) : 0,
        artist_name: String(source.artist_name || ""),
        artist_role: String(source.artist_role || ""),
        artist_image_url: String(source.artist_image_url || ""),
        artist_bio: String(source.artist_bio || ""),
        image_url: String(source.image_url || ""),
        media_images: parseMediaImages(source.media_images),
        model_url: String(source.model_url || ""),
        theme: String(source.theme || ""),
        color: String(source.color || ""),
        size: String(source.size || ""),
        tag: String(source.tag || ""),
        kicker: String(source.kicker || ""),
        material: String(source.material || ""),
        dimensions: String(source.dimensions || ""),
        store_name: String(source.store_name || ""),
        store_lng: toNumberOrNull(source.store_lng),
        store_lat: toNumberOrNull(source.store_lat),
        medium: String(source.medium || ""),
        period: String(source.period || ""),
        era: String(source.era || ""),
        year: toNumberOrNull(source.year),
        rating: toNumberOrNull(source.rating),
        rating_count: String(source.rating_count || ""),
        base_price: toNumberOrNull(source.base_price),
        owner_user_id: toNumberOrNull(source.owner_user_id),
      };
    }

    function newDraftProduct() {
      return normalizeProduct({
        id: `prod-${Date.now()}-${Math.floor(Math.random() * 1000)}`,
        name: "Untitled Product",
        gallery_type: "art",
        category: "Artwork",
        status: "active",
        owner_user_id: isAdmin ? null : panelUserId,
      });
    }

    function ensureSection(sectionKey) {
      if (!currentState.sections || typeof currentState.sections !== "object") {
        currentState.sections = {};
      }
      if (!currentState.sections[sectionKey] || typeof currentState.sections[sectionKey] !== "object") {
        currentState.sections[sectionKey] = {};
      }
      return currentState.sections[sectionKey];
    }

    function getSelectedProduct() {
      if (!Array.isArray(currentState.products)) {
        currentState.products = [];
      }
      currentState.products = currentState.products.map((product, index) => normalizeProduct(product, index));
      if (!selectedProductId && currentState.products.length) {
        selectedProductId = currentState.products[0].id;
      }
      if (selectedProductId && !currentState.products.some((product) => product.id === selectedProductId)) {
        selectedProductId = currentState.products[0] ? currentState.products[0].id : null;
      }
      return currentState.products.find((p) => p.id === selectedProductId) || null;
    }

    function renderNav() {
      if (!VISIBLE_TABS.includes(activeTab)) {
        activeTab = "products";
      }
      navEl.innerHTML = VISIBLE_TABS.map((tab) => {
        const active = tab === activeTab ? "active" : "";
        return `<button class="workspace-nav-btn ${active}" data-tab="${tab}">${TAB_LABEL[tab]}</button>`;
      }).join("");
    }

    function getFilteredProducts() {
      const filter = String((productTypeFilter && productTypeFilter.value) || "all").toLowerCase();
      const search = String((productSearchInput && productSearchInput.value) || "").trim().toLowerCase();
      const products = Array.isArray(currentState.products) ? currentState.products : [];
      const scopedProducts = isAdmin
        ? products
        : products.filter((product) => Number(product.owner_user_id) === Number(panelUserId));
      let filtered = scopedProducts;
      if (filter !== "all") {
        filtered = filtered.filter((product) => {
          const type = toGalleryType(product.gallery_type);
          if (filter === "art") {
            return type === "art" || type === "sculpture";
          }
          return type === filter;
        });
      }
      if (search) {
        filtered = filtered.filter((product) => {
          const haystack = [
            product.id,
            product.name,
            product.category,
            product.artist_name,
            product.gallery_type,
          ].map((item) => String(item || "").toLowerCase()).join(" ");
          return haystack.includes(search);
        });
      }

      const [sortByRaw, sortDirRaw] = String((productSortSelect && productSortSelect.value) || "sort_order:asc").split(":");
      const sortBy = sortByRaw || "sort_order";
      const sortDir = sortDirRaw === "desc" ? "desc" : "asc";
      filtered = filtered.slice().sort((a, b) => {
        const order = sortDir === "desc" ? -1 : 1;
        if (sortBy === "sort_order") {
          const nA = Number(a.sort_order || 0);
          const nB = Number(b.sort_order || 0);
          if (nA === nB) return String(a.name || "").localeCompare(String(b.name || "")) * order;
          return (nA - nB) * order;
        }
        const textA = String(a[sortBy] || "").toLowerCase();
        const textB = String(b[sortBy] || "").toLowerCase();
        if (textA === textB) return String(a.name || "").localeCompare(String(b.name || "")) * order;
        return textA.localeCompare(textB) * order;
      });

      return filtered;
    }

    function getPagedProducts(products) {
      const requestedPageSize = Number((productPageSize && productPageSize.value) || 20);
      const pageSize = Number.isFinite(requestedPageSize) && requestedPageSize > 0 ? requestedPageSize : 20;
      const total = products.length;
      const totalPages = Math.max(1, Math.ceil(total / pageSize));
      productPage = Math.min(Math.max(productPage, 1), totalPages);
      const start = (productPage - 1) * pageSize;
      return {
        items: products.slice(start, start + pageSize),
        total,
        page: productPage,
        pageSize,
        totalPages,
      };
    }

    function updateProductPager(meta) {
      if (!productPageMeta || !productPrevPage || !productNextPage) return;
      if (!meta) {
        productPageMeta.textContent = "";
        productPrevPage.disabled = true;
        productNextPage.disabled = true;
        return;
      }
      const start = meta.total === 0 ? 0 : ((meta.page - 1) * meta.pageSize) + 1;
      const end = Math.min(meta.total, meta.page * meta.pageSize);
      productPageMeta.textContent = `Showing ${start}-${end} of ${meta.total} products. Page ${meta.page}/${meta.totalPages}`;
      productPrevPage.disabled = meta.page <= 1;
      productNextPage.disabled = meta.page >= meta.totalPages;
    }

    function renderProductsList() {
      const filteredProducts = getFilteredProducts();
      const paging = getPagedProducts(filteredProducts);
      updateProductPager(paging);

      if (!paging.items.length) {
        listEl.innerHTML = `<div class="workspace-empty">No products found for the selected filters.</div>`;
        return;
      }
      listEl.innerHTML = paging.items.map((product) => {
        const active = product.id === selectedProductId ? "active" : "";
        const type = toGalleryType(product.gallery_type);
        const typeLabel = GALLERY_TYPE_LABELS[type] || "Art";
        const actionsHtml = isAdmin
          ? `<button type="button" class="workspace-item-btn" data-item-action="edit" data-product-id="${escapeHtml(product.id)}">Edit</button>
             <button type="button" class="workspace-item-btn" data-item-action="delete" data-product-id="${escapeHtml(product.id)}">Delete</button>`
          : `<button type="button" class="workspace-item-btn" data-item-action="edit" data-product-id="${escapeHtml(product.id)}">Edit</button>`;
        return `
          <div class="workspace-item ${active}" data-product-id="${escapeHtml(product.id)}">
            <div class="workspace-item-name">${escapeHtml(product.name || "Untitled Product")}</div>
            <div class="workspace-item-meta">${escapeHtml(typeLabel.toUpperCase())} - ${escapeHtml((product.status || "active").toUpperCase())}</div>
            <div class="workspace-item-actions">
              ${actionsHtml}
            </div>
          </div>
        `;
      }).join("");
    }

    function renderSectionList(sectionKey) {
      const section = ensureSection(sectionKey);
      const fields = getSectionLeafFields(section);
      if (!fields.length) {
        listEl.innerHTML = `<div class="workspace-empty">No fields yet for this section.</div>`;
        return;
      }
      listEl.innerHTML = fields.map((field) => {
        const preview = formatFieldValue(field.value);
        return `
          <div class="workspace-field-row">
            <span class="workspace-field-key">${escapeHtml(formatFieldLabel(field.path))}</span>
            <span class="workspace-field-preview">${escapeHtml(preview)}</span>
          </div>
        `;
      }).join("");
    }

    function collectSectionLeafFields(value, path, out) {
      if (Array.isArray(value)) {
        if (!value.length) return;
        value.forEach((item, index) => collectSectionLeafFields(item, path.concat(index), out));
        return;
      }
      if (value && typeof value === "object") {
        const keys = Object.keys(value);
        if (!keys.length) return;
        keys.forEach((key) => collectSectionLeafFields(value[key], path.concat(key), out));
        return;
      }
      out.push({ path, value });
    }

    function getSectionLeafFields(section) {
      const output = [];
      collectSectionLeafFields(section, [], output);
      return output;
    }

    function formatFieldLabel(path) {
      return path
        .map((part) => {
          if (typeof part === "number") return `Item ${part + 1}`;
          return String(part)
            .replace(/[_-]+/g, " ")
            .replace(/\b\w/g, (ch) => ch.toUpperCase());
        })
        .join(" / ");
    }

    function formatFieldValue(value) {
      if (value === null || value === undefined) return "";
      if (typeof value === "boolean") return value ? "Yes" : "No";
      if (typeof value === "number") return String(value);
      return String(value);
    }

    function fieldTypeForValue(value) {
      if (typeof value === "boolean") return "boolean";
      if (typeof value === "number") return "number";
      if (value === null) return "null";
      return "string";
    }

    function shouldUseTextarea(label, value) {
      if (typeof value !== "string") return false;
      if (value.includes("\n")) return true;
      if (value.length > 80) return true;
      return /bio|description|subtitle|note|message|lead|copy/i.test(label);
    }

    function encodePath(path) {
      return encodeURIComponent(JSON.stringify(path));
    }

    function decodePath(value) {
      try {
        return JSON.parse(decodeURIComponent(String(value || "")));
      } catch {
        return [];
      }
    }

    function setValueByPath(target, path, value) {
      if (!target || !Array.isArray(path) || !path.length) return;
      let ref = target;
      for (let index = 0; index < path.length - 1; index += 1) {
        const key = path[index];
        const nextKey = path[index + 1];
        if (ref[key] === undefined || ref[key] === null || typeof ref[key] !== "object") {
          ref[key] = typeof nextKey === "number" ? [] : {};
        }
        ref = ref[key];
      }
      ref[path[path.length - 1]] = value;
    }

    function getValueByPath(target, path) {
      if (!target || !Array.isArray(path) || !path.length) return undefined;
      let ref = target;
      for (let index = 0; index < path.length; index += 1) {
        const key = path[index];
        if (ref == null) return undefined;
        ref = ref[key];
      }
      return ref;
    }

    function cloneTemplateValue(value) {
      return JSON.parse(JSON.stringify(value));
    }

    function renderSectionCollectionManagers(sectionKey, section) {
      const collections = SECTION_COLLECTIONS[sectionKey] || [];
      if (!collections.length) return "";
      return collections.map((collection) => {
        const pathEncoded = encodePath(collection.path);
        const list = getValueByPath(section, collection.path);
        const items = Array.isArray(list) ? list : [];
        const rows = items.map((item, index) => {
          const preview = typeof item === "object"
            ? Object.values(item || {}).map((value) => String(value || "")).join(" â€¢ ")
            : String(item || "");
          return `
            <div class="workspace-collection-item">
              <div class="workspace-collection-item-text">${escapeHtml(preview || `${collection.label} ${index + 1}`)}</div>
              <div class="workspace-collection-item-actions">
                <button type="button" data-collection-action="up" data-collection-path="${pathEncoded}" data-collection-index="${index}" ${index === 0 ? "disabled" : ""}>Up</button>
                <button type="button" data-collection-action="down" data-collection-path="${pathEncoded}" data-collection-index="${index}" ${index === items.length - 1 ? "disabled" : ""}>Down</button>
                <button type="button" data-collection-action="delete" data-collection-path="${pathEncoded}" data-collection-index="${index}">Delete</button>
              </div>
            </div>
          `;
        }).join("");
        return `
          <div class="workspace-group">
            <div class="workspace-group-title">${escapeHtml(collection.label)}</div>
            <div class="workspace-collection-list">
              ${rows || `<div class="workspace-empty">No ${escapeHtml(collection.label.toLowerCase())} yet.</div>`}
            </div>
            <div class="actions" style="margin-top:8px;">
              <button type="button" data-collection-action="add" data-collection-path="${pathEncoded}">Add Item</button>
            </div>
          </div>
        `;
      }).join("");
    }

    function applyCollectionAction(action, collectionPath, itemIndex) {
      const section = ensureSection(activeTab);
      let list = getValueByPath(section, collectionPath);
      if (!Array.isArray(list)) {
        setValueByPath(section, collectionPath, []);
        list = getValueByPath(section, collectionPath);
      }
      if (!Array.isArray(list)) return;
      const index = Number(itemIndex);
      if (action === "add") {
        const config = (SECTION_COLLECTIONS[activeTab] || []).find((entry) => JSON.stringify(entry.path) === JSON.stringify(collectionPath));
        list.push(cloneTemplateValue(config ? config.template : ""));
      } else if (action === "delete") {
        if (Number.isInteger(index) && index >= 0 && index < list.length) {
          list.splice(index, 1);
        }
      } else if (action === "up") {
        if (Number.isInteger(index) && index > 0 && index < list.length) {
          const swap = list[index - 1];
          list[index - 1] = list[index];
          list[index] = swap;
        }
      } else if (action === "down") {
        if (Number.isInteger(index) && index >= 0 && index < (list.length - 1)) {
          const swap = list[index + 1];
          list[index + 1] = list[index];
          list[index] = swap;
        }
      }
      currentState.sections[activeTab] = section;
      renderSectionList(activeTab);
      renderSectionEditor(activeTab);
      setStatus(`${TAB_LABEL[activeTab]} collection updated.`, "success");
    }

    function parseSectionInputValue(input) {
      const type = input.getAttribute("data-section-type") || "string";
      if (type === "boolean") {
        return !!input.checked;
      }
      if (type === "number") {
